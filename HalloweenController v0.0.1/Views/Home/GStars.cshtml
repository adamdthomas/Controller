@{
    ViewBag.Title = "Welcome to your star page Gabriel!";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>


        @*ViewBag.GTCount 
          ViewBag.GDCount
          ViewBag.GDollars
          ViewBag.GFightLost
          ViewBag.GFightToday*@

<table class="table table-bordered table-striped">
    <colgroup>
        <col class="col-xs-7">
        <col class="col-xs-1">
    </colgroup>
    <thead>
        <tr>
            <th>Question</th>
            <th>Answer</th>
        </tr>
    </thead>
    <tbody>
        <tr class ="success">
            <th scope="row">
               How many stars did you earn today?
            </th>
            <td>@ViewBag.GDCount</td>
        </tr>
        <tr>
            <th scope="row">
                How many stars do you have?
            </th>
            <td>@ViewBag.GTCount</td>
        </tr>
        <tr class="success">
            <th scope="row">
                How much money do you have?
            </th>
            <td>@ViewBag.GDollars</td>
        </tr>
        <tr>
            <th scope="row">
                Were you good today?
            </th>
            <td>@ViewBag.GFightToday</td>
        </tr>
        <tr class="success">
            <th scope="row">
                How much money has bad behavior cost you?
            </th>
            <td>@ViewBag.GFightLost</td>
        </tr>
    </tbody>
</table>